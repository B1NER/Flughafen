<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
           minWidth="-Infinity" prefHeight="800.0" prefWidth="800.0" stylesheets="@CSSFiles/Style.css"
           xmlns="http://javafx.com/javafx/8.0.112" fx:controller="Controller.GepaeckBearbeitenController">
    <children>
        <ImageView fitHeight="854.0" fitWidth="1479.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@Grafiken/Background.jpg"/>
            </image>
        </ImageView>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="30.0">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="GepackbearbeitenText" alignment="CENTER" text="Gepäck bearbeiten"
                               textFill="WHITE">
                            <font>
                                <Font size="62.0"/>
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="50.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0">
                    <children>
                        <ComboBox fx:id="GepaeckTyp" prefHeight="80.0" prefWidth="500.0" promptText="Gepäck Typ"
                                  stylesheets="@CSSFiles/Style.css"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0">
                    <children>
                        <TextField fx:id="GewichtFeld" prefHeight="80.0" prefWidth="500.0" promptText="Gewicht in kg">
                            <font>
                                <Font size="30.0"/>
                            </font>
                        </TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0" spacing="10.0">
                    <children>
                        <Button fx:id="AbbrechenButton" mnemonicParsing="false" onAction="#AbbrechenAction"
                                prefHeight="65.0" prefWidth="240.0" text="Abbrechen">
                            <font>
                                <Font size="30.0"/>
                            </font>
                        </Button>
                        <Button fx:id="BestatigenButton" mnemonicParsing="false" onAction="#BestatigenAction"
                                prefHeight="65.0" prefWidth="240.0" text="Bestätigen">
                            <font>
                                <Font size="30.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
