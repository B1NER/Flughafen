<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<Pane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="1024.0" prefWidth="1280.0" stylesheets="@../View/CSSFiles/Style.css"
      xmlns="http://javafx.com/javafx/8.0.111" fx:controller="Controller.ZuBearbeitendeBuchungFindenConroller">
    <children>
        <StackPane prefHeight="1024.0" prefWidth="1280.0">
            <children>
                <ImageView fitHeight="1024.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true" scaleY="1.44">
                    <image>
                        <Image url="@../View/Grafiken/Background.jpg"/>
                    </image>
                </ImageView>
                <VBox alignment="CENTER" prefHeight="342.0" prefWidth="598.0" spacing="20.0">
                    <children>
                        <Label fx:id="NuterbearbeitenText" alignment="CENTER" prefHeight="80.0" prefWidth="1278.0"
                               text="Buchung finden" textFill="#fffefe">
                            <font>
                                <Font size="46.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER" fillHeight="false" prefHeight="50.0" prefWidth="1278.0" spacing="10.0">
                            <children>
                                <Label fx:id="VornameText" alignment="TOP_CENTER" prefHeight="50.0" text="Vorname:"
                                       textFill="#fffefe">
                                    <font>
                                        <Font size="36.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="VornameFeld" alignment="CENTER" prefHeight="50.0">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="25.0"/>
                                    </font>
                                </TextField>
                                <Label fx:id="NachnameText" alignment="TOP_CENTER" prefHeight="50.0" text="Nachname:"
                                       textFill="#fffefe">
                                    <font>
                                        <Font size="36.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="NachnameFeld" alignment="CENTER" prefHeight="50.0">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="25.0"/>
                                    </font>
                                </TextField>
                                <Button fx:id="SuchenButton" mnemonicParsing="false" onAction="#SuchenAction"
                                        prefHeight="50.0" prefWidth="200.0" text="Suchen">
                                    <font>
                                        <Font size="25.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <TableView fx:id="tabelle" prefHeight="700.0" prefWidth="1280.0">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="SpalteHinflug" prefWidth="75.0" text="Hinflug"/>
                                <TableColumn fx:id="SpalteRueckflug" prefWidth="142.0" text="Rückflug"/>
                                <TableColumn fx:id="SpalteAnwender" prefWidth="128.0" text="Anwender"/>
                                <TableColumn fx:id="SpalteSitzplaetze" prefWidth="115.0" text="Sitzplätze"/>
                                <TableColumn fx:id="SpalteGepaeck" prefWidth="115.0" text="Gepäck"/>
                                <TableColumn fx:id="SpaltePreis" prefWidth="115.0" text="Preis"/>
                                <TableColumn fx:id="SpaltebyAngestellter" prefWidth="115.0" text="Erstellt von"/>
                            </columns>
                        </TableView>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                            <children>
                                <Button fx:id="LoschenButton" contentDisplay="CENTER" mnemonicParsing="false"
                                        onAction="#LoschenAction" prefHeight="65.0" prefWidth="200.0" text="Löschen"
                                        textOverrun="CENTER_ELLIPSIS">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="20.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="BearbeitenButton" mnemonicParsing="false" onAction="#BearbeitenAction"
                                        prefHeight="65.0" prefWidth="200.0" text="Bearbeiten">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="20.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="ZuruckButton" mnemonicParsing="false" onAction="#ZuruckAction"
                                        prefHeight="65.0" prefWidth="200.0" text="Zurück">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="20.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                    <StackPane.margin>
                        <Insets top="50.0"/>
                    </StackPane.margin>
                </VBox>
            </children>
        </StackPane>
    </children>
</Pane>
