<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1024.0" prefWidth="1280.0" stylesheets="@../View/CSSFiles/Style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.FluglisteController">
    <children>
        <StackPane prefHeight="1024.0" prefWidth="1280.0">
            <children>
                <ImageView fitHeight="1024.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true" scaleY="1.44">
                    <image>
                        <Image url="@../View/Grafiken/Background.jpg" />
                    </image>
                </ImageView>
                <VBox alignment="CENTER" prefHeight="1024.0" prefWidth="1280.0" spacing="20.0">
                    <children>
                        <Label fx:id="FlugauswahlText" text="Flug auswählen" textFill="WHITE">
                            <font>
                                <Font size="60.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="800.0" prefWidth="1280.0" spacing="20.0">
                            <children>
                                <VBox prefHeight="500.0" prefWidth="300.0" spacing="20.0">
                                    <children>
                                        <Label fx:id="IhreSucheText" text="Ihre Suche" textFill="WHITE">
                                            <font>
                                                <Font size="30.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="FlugabFeld" prefHeight="65.0" prefWidth="300.0" promptText="Abflugort" />
                                        <TextField fx:id="FlugnachFeld" prefHeight="65.0" prefWidth="300.0" promptText="Zielort" />
                                        <TextField fx:id="fluggesellschaftFeld" prefHeight="65.0" prefWidth="300.0" promptText="Fluggesellschaft" />
                                        <DatePicker fx:id="DatumHinflug" prefHeight="65.0" prefWidth="300.0" promptText="Abflugdatum" />
                                        <TextField fx:id="PersonenanzahlFeld" prefHeight="65.0" prefWidth="300.0" promptText="Anzahl Personen" />
                                        <Button fx:id="FlugfindenButton" mnemonicParsing="false" onAction="#FlugfindenAction" prefHeight="65.0" prefWidth="300.0" text="Flüge finden">
                                            <font>
                                                <Font size="30.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </VBox>
                                <TableView fx:id="flugTabelle" prefHeight="811.0" prefWidth="901.0">
                                    <columns>
                                        <TableColumn fx:id="spalteAbflugsOrt" prefWidth="775.0" text="Abflug" />
                              <TableColumn fx:id="spalteAnkunftsOrt" prefWidth="75.0" text="Ankunft" />
                                        <TableColumn fx:id="spalteDatum" prefWidth="322.0" text="Datum" />
                                        <TableColumn fx:id="spalteFluggesellschaft" prefWidth="250.0" text="Fluggesellschaft" />
                                        <TableColumn fx:id="spaltePreis" prefWidth="127.0" text="Preis" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
