<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<Pane prefHeight="1024.0" prefWidth="1280.0" stylesheets="@../View/CSSFiles/Style.css"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.FluglisteController">
    <children>
        <StackPane prefHeight="1024.0" prefWidth="1280.0">
            <children>
                <ImageView fitHeight="1024.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true" scaleY="1.44">
                    <image>
                        <Image url="@../View/Grafiken/Background.jpg" />
                    </image>
                </ImageView>
            </children>
        </StackPane>
        <HBox alignment="CENTER" prefHeight="1024.0" prefWidth="1280.0">
            <children>
                <VBox alignment="CENTER" prefHeight="1024.0" prefWidth="1280.0" spacing="20.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="75.0" prefWidth="1280.0">
                            <children>
                                <Label fx:id="FlugauswahlText" text="Flug auswählen" textFill="WHITE">
                                    <font>
                                        <Font size="60.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="1024.0" prefWidth="1280.0" spacing="20.0">
                            <children>
                                <VBox alignment="TOP_CENTER" prefHeight="738.0" prefWidth="380.0" spacing="20.0">
                                    <children>
                                        <HBox prefHeight="65.0" prefWidth="300.0">
                                            <children>
                                                <Label fx:id="IhreSucheText" text="Ihre Suche:" textFill="WHITE">
                                                    <font>
                                                        <Font size="48.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>
                                        <TextField fx:id="FlugabFeld" prefHeight="65.0" prefWidth="300.0" promptText="Abflugort">
                                            <font>
                                                <Font size="30.0" />
                                            </font>
                                        </TextField>
                                        <TextField fx:id="FlugnachFeld" prefHeight="65.0" prefWidth="300.0" promptText="Zielort">
                                            <font>
                                                <Font size="30.0" />
                                            </font>
                                        </TextField>
                                        <TextField fx:id="fluggesellschaftFeld" prefHeight="65.0" prefWidth="300.0" promptText="Fluggesellschaft">
                                            <font>
                                                <Font size="30.0" />
                                            </font>
                                        </TextField>
                                        <DatePicker fx:id="DatumHinflug" prefHeight="65.0" prefWidth="358.0" promptText="Abflugdatum" />
                                        <HBox alignment="CENTER" prefHeight="65.0" prefWidth="220.0">
                                            <children>
                                                <Label alignment="CENTER" maxWidth="300.0" prefHeight="60.0" text="Anzahl Personen:  " textFill="WHITE">
                                                    <font>
                                                        <Font size="30.0" />
                                                    </font>
                                                </Label>
                                                <TextField fx:id="PersonenanzahlFeld" alignment="CENTER" prefHeight="50.0" prefWidth="50.0" promptText="1" />
                                            </children>
                                        </HBox>
                                        <Button fx:id="FlugfindenButton" mnemonicParsing="false" onAction="#FlugfindenAction" prefHeight="65.0" prefWidth="362.0" text="Flüge finden">
                                            <font>
                                                <Font size="30.0" />
                                            </font>
                                        </Button>
                                        <HBox alignment="CENTER" prefHeight="65.0" prefWidth="300.0">
                                            <children>
                                                <Button fx:id="zurueckButton1" mnemonicParsing="false" onAction="#zurueckAction" prefHeight="65.0" prefWidth="175.0" text="zurück">
                                                    <font>
                                                        <Font size="30.0" />
                                                    </font>
                                                    <HBox.margin>
                                                        <Insets right="10.0" />
                                                    </HBox.margin>
                                                </Button>
                                                <Button fx:id="buchenButton" mnemonicParsing="false" onAction="#buchenAction" prefHeight="65.0" prefWidth="175.0" text="Buchen">
                                                    <font>
                                                        <Font size="30.0" />
                                                    </font>
                                                    <HBox.margin>
                                                        <Insets left="10.0" />
                                                    </HBox.margin>
                                                </Button>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" prefHeight="65.0" prefWidth="300.0">
                                            <children>
                                                <Label fx:id="keineBuchungAusgewaehltLabel" prefHeight="65.0"
                                                       prefWidth="300.0">
                                                    <font>
                                                        <Font size="30.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>
                                    </children>
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </VBox>
                                <TabPane id="TABPANE" fx:id="tabPane" prefHeight="500.0" prefWidth="900.0"
                                         tabClosingPolicy="UNAVAILABLE" tabMaxHeight="200.0" tabMaxWidth="800.0"
                                         tabMinHeight="40.0" tabMinWidth="400.0">
                                    <tabs>
                                        <Tab fx:id="hinflugTab" styleClass="TabClass" text="Hinflug wählen">
                                            <content>
                                                <TableView fx:id="hinflugTabelle" prefHeight="581.0" prefWidth="1122.0">
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                    <columns>
                                                        <TableColumn fx:id="HinSpalteAbflugsOrt" prefWidth="775.0" text="Abflug" />
                                                        <TableColumn fx:id="HinSpalteAnkunftsOrt" prefWidth="222.0" text="Ankunft" />
                                                        <TableColumn fx:id="HinSpalteDatum" prefWidth="156.0" text="Datum" />
                                                        <TableColumn fx:id="HinSpalteFluggesellschaft" prefWidth="266.0" text="Fluggesellschaft" />
                                                        <TableColumn fx:id="HinSpaltePreis" prefWidth="112.0" text="Preis" />
                                                    </columns>
                                                </TableView>
                                            </content>
                                        </Tab>
                                        <Tab fx:id="rueckflugTab" styleClass="TabClass" text="Rückflug  wählen">
                                            <content>
                                                <TableView fx:id="rueckflugTabelle" prefHeight="686.0" prefWidth="800.0">
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                    <columns>
                                                        <TableColumn fx:id="RueckSpalteAbflugsOrt" prefWidth="775.0" text="Abflug" />
                                                        <TableColumn fx:id="RueckSpalteAnkunftsOrt" prefWidth="75.0" text="Ankunft" />
                                                        <TableColumn fx:id="RueckSpalteDatum" prefWidth="154.0" text="Datum" />
                                                        <TableColumn fx:id="RueckSpalteFluggesellschaft" prefWidth="237.0" text="Fluggesellschaft" />
                                                        <TableColumn fx:id="RueckSpaltePreis" prefWidth="141.0" text="Preis" />
                                                    </columns>
                                                </TableView>
                                            </content>
                                        </Tab>
                                    </tabs>
                                </TabPane>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="50.0" top="50.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
    </children>
</Pane>
