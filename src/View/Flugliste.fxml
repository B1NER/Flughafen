<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1024.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.FluglisteController">
    <children>
        <StackPane prefHeight="1024.0" prefWidth="1280.0">
            <children>
                <ImageView fitHeight="1024.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true" scaleY="1.44">
                    <image>
                        <Image url="@Grafiken/Background.jpg" />
                    </image>
                </ImageView>
                <VBox alignment="CENTER" prefHeight="1024.0" prefWidth="1280.0" spacing="20.0">
                    <children>
                        <Label fx:id="FlugauswahlText" text="Hinflug finden" textFill="WHITE">
                            <font>
                                <Font size="60.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="800.0" prefWidth="1280.0" spacing="20.0">
                            <children>
                                <VBox prefHeight="500.0" prefWidth="300.0" spacing="20.0">
                                    <children>
                                        <Label fx:id="IhreSucheText" text="Ihre Suche" textFill="WHITE">
                                            <font>
                                                <Font size="30.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="FlugAbFeld" prefHeight="65.0" prefWidth="300.0" promptText="Flug ab" />
                                        <TextField fx:id="FlugNachFeld" prefHeight="65.0" prefWidth="300.0" promptText="Flug nach" />
                                        <TextField fx:id="fluggesellschaft" prefHeight="65.0" prefWidth="300.0" promptText="Fluggesellschaft" />
                              <TextField fx:id="anzahlPersonen" prefHeight="65.0" prefWidth="300.0" promptText="Anzahl Personen" />
                                        <DatePicker fx:id="DatumHinflug" prefHeight="65.0" prefWidth="300.0" promptText="Abflug Datum" />
                                        <Button fx:id="FlugfindenButton" mnemonicParsing="false" onAction="#FlugfindenAction" prefHeight="65.0" prefWidth="300.0" text="Flug finden">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </VBox>
                                <TableView prefHeight="390.0" prefWidth="901.0">
                                    <columns>
                                        <TableColumn fx:id="SpalteFlug" prefWidth="736.0" text="Flug" />
                                        <TableColumn fx:id="SpaltePreis" prefWidth="163.0" text="Preis" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
